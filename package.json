{
  "name": "@0x-jerry/x-release",
  "description": "A convenient tool that helps you to create a new release.",
  "version": "2.1.1",
  "main": "src/export.ts",
  "types": "src/export.ts",
  "type": "module",
  "license": "MIT",
  "bin": {
    "x-release": "dist/cli.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "src",
    "cli.js",
    "tsconfig.json"
  ],
  "scripts": {
    "dev": "tsx dev.ts",
    "release": "tsx src/cli.ts",
    "build": "tsup src/cli.ts --clean --format esm",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@0x-jerry/load-pkg": "^0.1.2",
    "@0x-jerry/utils": "^2.2.5",
    "cac": "^6.7.14",
    "debug": "^4.3.4",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2",
    "semver": "^7.6.1",
    "unconfig": "^0.3.13"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^20.12.11",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.5.8",
    "tsup": "^8.0.2",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}