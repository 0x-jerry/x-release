  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src",
    "dev.ts",
    "tests"
  ]
}